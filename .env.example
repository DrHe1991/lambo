# ============================================================================
# BitLink Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================================================

# ----------------------------------------
# Database
# ----------------------------------------
DATABASE_URL=postgresql://bitlink:bitlink@localhost:5432/bitlink
# For Docker Compose internal networking:
# DATABASE_URL=postgresql://bitlink:bitlink@postgres:5432/bitlink

# ----------------------------------------
# Redis
# ----------------------------------------
REDIS_URL=redis://localhost:6379
# For Docker Compose internal networking:
# REDIS_URL=redis://redis:6379

# ----------------------------------------
# Authentication
# ----------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------------------
# AI Services
# ----------------------------------------
# Anthropic Claude API (get from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# OpenAI (optional fallback)
OPENAI_API_KEY=sk-xxxxx

# Groq (for x-agent, optional)
GROQ_API_KEY=gsk_xxxxx

# ----------------------------------------
# Platform Configuration (Phase 1)
# ----------------------------------------
# Initial credits given to new users
INITIAL_CREDITS=1000

# Daily login reward (decreases as user base grows)
DAILY_LOGIN_REWARD=100

# Base stake required for posting
POST_STAKE_BASE=10

# Base stake required for liking
LIKE_STAKE_BASE=1

# Challenge stake multiplier (challenger must stake this * post stake)
CHALLENGE_STAKE_MULTIPLIER=2

# Stake lock duration (hours)
STAKE_LOCK_HOURS=24

# ----------------------------------------
# Trust Score Thresholds
# ----------------------------------------
TRUST_SCORE_WHITE_MAX=390
TRUST_SCORE_GREEN_MAX=590
TRUST_SCORE_BLUE_MAX=740
TRUST_SCORE_PURPLE_MAX=890
# 891-1000 is Orange (highest tier)

# ----------------------------------------
# Service URLs (for local development)
# ----------------------------------------
API_URL=http://localhost:3000
AI_JUDGE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
# Requests per minute per user
RATE_LIMIT_RPM=60

# Challenges per day per user
CHALLENGE_LIMIT_DAILY=10

# Posts per hour per user
POST_LIMIT_HOURLY=20

# ----------------------------------------
# Feature Flags (Phase 1)
# ----------------------------------------
# Enable/disable features for gradual rollout
FEATURE_DAILY_REWARDS=true
FEATURE_INVITE_REWARDS=true
FEATURE_AI_CHALLENGE=true
FEATURE_HUMAN_JURY=false
FEATURE_BOOST_ADS=false
FEATURE_DEPOSIT=false
FEATURE_WITHDRAW=false

# ----------------------------------------
# Logging
# ----------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ----------------------------------------
# Node Environment
# ----------------------------------------
NODE_ENV=development
